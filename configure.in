AM_CONFIG_HEADER(config.h)

AM_INIT_AUTOMAKE(bug-buddy, 0.3)

AM_MAINTAINER_MODE

AM_ACLOCAL_INCLUDE(macros)

GNOME_INIT

AC_PROG_CC
AC_ISC_POSIX
AC_HEADER_STDC
AC_ARG_PROGRAM
